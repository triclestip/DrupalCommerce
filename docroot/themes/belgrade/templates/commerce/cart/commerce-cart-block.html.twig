<div{{ attributes.addClass('navbar-right' )}}>
  <div class="cart-block--summary">
    <a class="cart-block--link__expand" href="{{ url }}">
      <span class="cart-block--summary__icon">
        <i class="glyph glyph-cart"></i>
        <span class="sr-only"></span>
      </span>
      <span class="cart-block--summary__count">{% trans %}Cart{% endtrans %} / {{ count_text }}</span>
    </a>
  </div>
  {% if content %}
  <div class="cart-block--contents">
    <button type="button" class="close-btn">
      <span class="sr-only">{{'Close cart contents'|t}}</span>
    </button>
    <div class="cart-block--contents__inner">
      <div class="cart-block--contents__items">
        {{ content }}
      </div>
      <div class="cart-block--contents__links">
        {{ links }}
      </div>
    </div>
  </div>
  {% endif %}
</div>
